{{!< default}}
<div class="row clearfix main {{#is "index"}}blog{{/is}}{{#is "tag"}}tag{{/is}}">
  <div class="container">
    <section class="column full post-body">
			
      <header class="column three-fourths post-three post-header">
        <h1 class="post-title" itemprop="headline">
        {{#is "index"}}
          Blog
        {{/is}}
        
        {{#is "tag"}}
          Tag: {{tag.name}}
        {{/is}}
        </h1>
      </header>
			
			<div class="column three-fourths post-three post-break">
				{{> post/break}}
			</div>
			
			<div class="column three-fourths post-three post-list">
      	{{> "loop"}}
			</div>
			
      {{> sidebar}}
    </section>
  </div>
</div>