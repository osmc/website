<section class="sidebar-news">
  <header class="sidebar-header">
    <h3 class="sidebar-title">Newsletter</h3>
  </header>
  <p class="sidebar-text">Stay up to date with the latest developments.<br/>We won't spam you or share your email address with anyone.</p>
  <form name="subscribeform" action="http://news.osmc.tv/?p=subscribe&id=1" method="POST" class="sidebar-news-form">
    <div class="sidebar-news-icons">
      <span class="sidebar-news-icon1">
        <span class="sidebar-news-spinner">
          <div class="img"></div>
        </span>
        <span class="sidebar-news-mail">
          {{> svg/mail}}
        </span>
      </span>
      <button class="sidebar-news-check ani1" type="submit">
        {{> svg/check}}
      </button>
    </div>
    <input class="sidebar-news-email" type="email" name="email" value="" placeholder="Email" required>
    <input type="hidden" name="subscribe" value="">
  </form>
</section>
