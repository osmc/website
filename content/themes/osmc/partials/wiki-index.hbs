{{wiki-index}}

<div class="wiki-index">
  {{#each wiki.index.categories}}
    <section class="wiki-cat {{slug}}">

      <header class="wiki-cat-header">
        <h2 class="wiki-cat-title">{{title}}</h2>
        <span class="wiki-cat-desc">{{description}}</span>
      </header>

      <ul class="wiki-cat-list">
        {{#each posts}}
          <li>
            <a data-name="{{title}}" href="{{escape url}}">{{title}}</a>
          </li>
        {{/each}}
        
        <li class="wiki-cat-noresults">No results</li>
      </ul>

    </section>
  {{/each}}
</div>